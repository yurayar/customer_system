.widget-login
  .widget-header
    %h2 Вход в систему
  .widget-content
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true, label: 'Имя пользователя или Email', placeholder: 'Введите логин или Email'
        = f.input :password, required: false, label: 'Пароль', placeholder: 'Введите пароль'
      .form-actions
        = f.button :submit, "Отправить"
