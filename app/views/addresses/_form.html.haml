= simple_form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.input(:agreement_id,
              label: 'Agreements',
              collection: Agreement.all,
              label_method: :number)
  .field
    = f.label :city
    = f.text_field :city
  .actions
    = f.submit 'Save'
