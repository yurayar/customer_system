.address-form
  .form-header
    %pНовый объект
  .form-body
    = simple_form_for @address do |f|
      - if @address.errors.any?
        #error_explanation
          %h2= "#{pluralize(@address.errors.count, "error")} prohibited this agreement from being saved:"
          %ul
            - @address.errors.full_messages.each do |msg|
              %li= msg
      .field
        = f.label 'Укажите город'
        = f.text_field :city
      .field
        = f.label 'Укажите улицу и номер дома'
        = f.text_field :street
      .field
        = f.label 'Укажите номер договора'
        = f.input(:agreement_id,
              label: false,
              collection: Agreement.all,
              label_method: :number)
      .actions
        = f.submit 'Сохранить'
